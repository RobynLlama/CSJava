<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Jint" Version="4.4.1" />
  </ItemGroup>

  <Target Name="BuildScripts" BeforeTargets="Build">
    <Exec command="dotnet tool run dotnet-script build-all-scripts.csx "
      WorkingDirectory="$(MSBuildStartupDirectory)" />
  </Target>

</Project>
